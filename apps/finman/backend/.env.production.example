# Database Configuration
DATABASE_URL="postgresql://finman_user:YOUR_DB_PASSWORD_HERE@localhost:5432/finman_db"

# JWT Configuration
JWT_SECRET=YOUR_JWT_SECRET_HERE_MINIMUM_32_CHARACTERS_RECOMMENDED_64
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration (Update with your domain)
ALLOWED_ORIGINS=https://finman.yourdomain.com,https://www.finman.yourdomain.com

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Optional: Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
