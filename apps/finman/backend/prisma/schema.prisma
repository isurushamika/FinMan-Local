// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
  budgets      Budget[]
  recurring    RecurringTransaction[]
  items        Item[]
  purchases    ItemPurchase[]
  subscriptions Subscription[]

  @@map("users")
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // 'income' | 'expense'
  amount      Float
  category    String
  description String?
  date        String
  receiptPath String?  // File path on server
  account     String?
  recurringId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([userId, type])
  @@index([userId, category])
  @@map("transactions")
}

model Budget {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category  String
  amount    Float
  period    String   // 'monthly' | 'yearly'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, category, period])
  @@index([userId])
  @@map("budgets")
}

model RecurringTransaction {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          String    // 'income' | 'expense'
  amount        Float
  category      String
  description   String?
  account       String?
  frequency     String    // 'daily' | 'weekly' | 'monthly' | 'yearly'
  startDate     String
  nextDate      String
  endDate       String?
  lastGenerated String?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId, isActive])
  @@index([userId, nextDate])
  @@map("recurring_transactions")
}

model Item {
  id          String         @id @default(cuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  category    String
  quantity    Int            @default(0)
  unitPrice   Float
  notes       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  purchases   ItemPurchase[]

  @@index([userId])
  @@index([userId, category])
  @@map("items")
}

model ItemPurchase {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  itemId       String
  item         Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  quantity     Int
  unitPrice    Float
  totalCost    Float
  purchaseDate String
  store        String?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([itemId])
  @@index([userId, purchaseDate])
  @@map("item_purchases")
}

model Subscription {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  amount          Float
  billingCycle    String   // 'monthly' | 'yearly' | 'weekly' | 'quarterly'
  nextBillingDate String
  category        String
  description     String?
  isActive        Boolean  @default(true)
  autoRenew       Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([userId, isActive])
  @@index([userId, nextBillingDate])
  @@map("subscriptions")
}
